@using Webdiyer.WebControls.Mvc;
@model PagedList<SensingCloud.Models.UserViewModel>
<table id="simple-table" class="table table-striped table-bordered table-hover center">
    <thead>
        <tr>
            <th>序号</th>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.Role)</th>
            <th>@Html.DisplayNameFor(model => model.Company)</th>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Group)</th>
            <th>状态</th>
            <th>@Resources.Action</th>
            
        </tr>
    </thead>

    <tbody>
        @{ var row = (Model.CurrentPageIndex - 1) * Model.PageSize; }
        @foreach (var item in Model)
        {
            ViewDataDictionary dic = new ViewDataDictionary { { "row", ++row} };
            Html.RenderPartial("_UserListItem", item, dic);
        }

    </tbody>
</table>
<div class="row row-pager col-xs-12" style="float:right;text-align:right">
    @Html.Pager(Model, new PagerOptions { ActionName = "Index", PrevPageText = "上页", NextPageText = "下页", FirstPageText = "首页", LastPageText = "尾页", PageIndexParameterName = "pageIndex", ContainerTagName = "ul", CssClass = "pagination", CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>", DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>", PagerItemTemplate = "<li>{0}</li>" })
</div>

<div class="clearfix"></div>