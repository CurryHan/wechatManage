    <script>
        $.ajaxSetup({
            cache: false //关闭AJAX缓存
        });

        function JsAjaxLoading() {
            var loading = $('#fountainG');
            var mask = $('#fountainMask');
            mask.hide();
            loading.hide();
            $(document).ajaxStart(function () {
                mask.show();
                loading.show();
            }).ajaxStop(function () {
                mask.hide();
                loading.hide();
            });
        }

        JsAjaxLoading();
    </script>
