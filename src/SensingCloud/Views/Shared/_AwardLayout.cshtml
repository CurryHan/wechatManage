<body class="no-skin pos-rel coming-soon">

    @RenderBody()

    <!-- basic scripts -->
    <!--[if !IE]>
    -->
    <script src="~/Content/ace/js/jquery.min.js"></script>
    <script src="~/scripts/swiper.min.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
