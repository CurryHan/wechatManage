@model Sensing.Entities.Weixin.WeixinUserAward
@using SensingCloud.Helpers
@using SensingCloud.Models
@{ 
    WeChatJSViewModel weChatJSInfo = ViewBag.WXJSInfo as WeChatJSViewModel;

}
@functions{

    public string GetShareImage()
    {
        string activityAwardShareImage = "";
        activityAwardShareImage = Model.ActivityGame.Activity.AwardShare.ImageLink;
        if (string.IsNullOrEmpty(activityAwardShareImage))
        {
            activityAwardShareImage = ConstConfig.Common_Share_Image;
        }
        else if (!activityAwardShareImage.StartsWith("http"))
        {
            activityAwardShareImage = Request.Url.Scheme + "://" + Request.Url.Host + activityAwardShareImage.Replace("\\", "/");
        }
        return activityAwardShareImage;
    }


}
<!DOCTYPE html>
<html lang="en">
