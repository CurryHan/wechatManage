@model  Sensing.Entities.Menu

<div class="modal fade" id="editDialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">选取素材</h4>
            </div>
            <div class="modal-body">
                <form id="editForm" class="form-horizontal" role="form">
                    <div class="form-border">
                        <div class="form-horizontal">
                            @Html.HiddenFor(model=>model.Id)
                            @Html.HiddenFor(model => model.Name)
                            @Html.HiddenFor(model => model.Type)
                            <div class="form-group">
                                <label class="control-label col-md-3">名称 </label>
                                <div class="col-md-7">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", disabled = "disabled" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">素材名称</label>
                                    <div class="col-md-7">
                                        @Html.DropDownListFor(model => model.MediaId, (IEnumerable<SelectListItem>)ViewBag.MediaList, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MediaId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                        </div>
                    </div>

                </form>

            </div>
            <div class="modal-footer">
                <a id="cancel_dialog" class="btn btn-default" onclick="doCloseDialog()">取消</a>
                <a id="btn_confirm" class="btn btn-primary">确定</a>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
</script>