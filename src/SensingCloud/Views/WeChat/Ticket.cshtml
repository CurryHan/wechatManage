    <style>
        body {
            background-color: #030009;
        }
    </style>
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script>
        $(function () {
            $(".show-list-box img").each(function () {
                var img = $(this);
                var img_src = img.attr("src");
                var frameid = 'frameimg' + Math.random();
                window.img = '<img id="img" style="width:100%" src=\'' + img_src + '?' + Math.random() + '\' /><script>window.onload = function() { parent.document.getElementById(\'' + frameid + '\').height = document.getElementById(\'img\').height+\'px\'; }<' + '/script>';
                img.parent().append('<iframe id="' + frameid + '" src="javascript:parent.img;" frameBorder="0" scrolling="no" width="100%"></iframe>');
                img.remove();
            });
        });
    </script>
</head>
<body>


    <div class="page page3">
        <div class="show-list-box">
            @foreach (var item in Model)
            {
                if (item.MediaId.HasValue)
                {
                    <div class="show-list">
                        <div class="show-img"><img src="@item.Media.Url" /></div>
                        <a href="#">@item.Media.Title.Substring(0,item.Media.Title.LastIndexOf('.'))</a>
                    </div>
                }
            }
        </div>
    </div>

</body>
