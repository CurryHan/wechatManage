<html class="no-js">
 <!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <!--允许全屏-->
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="yes" name="apple-touch-fullscreen">
    <meta content="telephone=no,email=no" name="format-detection">
    <title>无锡百乐戴斯酒店</title>
    <link rel="apple-touch-icon" href="favicon.png">
    <link rel="Shortcut Icon" href="favicon.png" type="image/x-icon">
    <script src="http://g.tbcdn.cn/mtb/lib-flexible/0.3.4/??flexible_css.js,flexible.js"></script>
    <link href="~/Content/style.css" rel="stylesheet" />
    <style type="text/css">
        html {
            background-color: #030009;
        }
    </style>
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script>
        $(function () {
            $(".show-list-box img").each(function () {
                var img = $(this);
                var img_src = img.attr("src");
                var frameid = 'frameimg' + Math.random();
                window.img = '<img id="img" style="width:100%" src=\'' + img_src + '?' + Math.random() + '\' /><script>window.onload = function() { parent.document.getElementById(\'' + frameid + '\').height = document.getElementById(\'img\').height+\'px\'; }<' + '/script>';
                img.parent().append('<iframe id="' + frameid + '" src="javascript:parent.img;" frameborder="0" scrolling="no" width="100%" marginwidht="0" hspeace= "0" vspace= "0"></iframe>');
                img.remove();
            });
        });
    </script>
</head>
<body>


    <div class="page">
        <div class="show-list-box">
            @foreach (var item in Model)
            {
                if (item.MediaId.HasValue)
                {
                    <div class="show-list">
                        <div class="show-img"><img src="@item.Media.Url" /></div>
                        <a href="#">@item.Media.Title.Substring(0,item.Media.Title.LastIndexOf('.'))</a>
                    </div>
                }
            }
        </div>
    </div>

</body>
</html>