    <script>
        function JsSort()
        {
            var data;
            if($("#divSort").attr('data-content')=='time') {
                data = @Html.Raw(rankjson);
                $("#divSort").html('日期');
                $("#divSort").attr('data-content','rank');
            }else{
                data = @Html.Raw(timejson);
                $("#divSort").html('奖品');
                $("#divSort").attr('data-content','time');
            }

            $("#list").html('');
            $.each(data,function(i,el){
                var date=new Date(el.LastUpdated);
                var MM=date.getMonth()+1;
                var yyyy=date.getFullYear();
                var dd=date.getDate();
                var HH=date.getHours();
                var mm=date.getMinutes();
                var foramtdate=yyyy+'-'+MM+'-'+dd+' '+HH+':'+mm;
                $("#list").append('<div style="width: 100%;height: 6rem;background-color: #FFFFFF;margin-top: 1rem;border-top: solid 1px #d1d1d1;">'
                        + '<div style="width: 4rem;height: 4rem;margin-top: 1rem;margin-left: 2rem;float: left;">'
                            + '<img src="' + el.Headimgurl + '" style="height: 100%;border-radius: 50%;">'
                        + '</div>'
                        + '<div style="width: 70%;height: 4rem;margin-top: 1rem;margin-left: 1rem;float: right;">'
                            +'<div style="width: 100%;height: 50%;">'
                            +'<div style="width: 50%;float: left;font-size: 1rem;margin-top: 0.3rem;"><span>'+el.UserName+'</span></div>'
                            +'<div style="width: 50%;float: right;font-size: 1.2rem;text-align: center;"><span>'+el.AwardName+'</span></div>'
                        +'</div>'
                        +'<div style="width: 100%;height: 50%;">'
                            +'<div style="width: 50%;float: left;font-size: 0.7rem;margin-top: 0.3rem;"><span>'+foramtdate+'</span></div>'
                            +'<div style="width: 50%;float: right;font-size: 1.2rem;text-align: center;"><span>('+el.AwardProduct+')</span></div>'
                        +'</div>'
                        +'</div>');

            });

        }
    </script>
