                        <i class="fa fa-gamepad" style="padding-top:0.5rem;"></i>
                    </div>
                    <div style="width: 100%;height: 1rem;color: #8d8d8d">活动</div>
                </a>
            </div>
        }
    </div>
    <div style="width: 100%;color: #727272;">
        <div style="width: 100%;height: 5rem;background-color: #FFFFFF;margin-top: 3rem;">
            @{
                string activityTitle = Model.ActivityName + "大放送";
                string totalTitle = "(共" + Model.TotalCount + "个)";
                string sendTitle = "已送出" + Model.SendCount + "个";
            }
            <div style="height: 2.5rem">
                <div style="width: 70%;height: 2.5rem;float: left;margin-top: 1rem;margin-left: 2rem;float: left;">
                    <img src="@GetLogo()" style="width:2.2rem;height: 2.5rem">
                    <span style="font-size: 1.2rem">@activityTitle</span>
                    <span style="font-size: 0.7rem">@totalTitle</span>
                </div>
                <div id="divSort" onclick="JsSort();" data-content="time" style="width: 15%; margin-top: 1rem;margin-right: 1rem;float: right;position: relative;border: solid 1px #39c337;text-align: center;border-radius: 5px;padding-top: 0.2rem;padding-bottom: 0.2rem;">
                    奖品
                </div>
            </div>
            <div style="height: 1rem;margin-top: 1rem;margin-left: 4.5rem;font-size: 0.7rem;color: #9a9a9a;">
                <span>@sendTitle</span>
            </div>

        </div>
        <div id="list">
            @foreach (var item in Model.UserAwardList)
            {
                <div style="width: 100%;height: 6rem;background-color: #FFFFFF;margin-top: 1rem;border-top: solid 1px #d1d1d1;">
                    <div style="width: 4rem;height: 4rem;margin-top: 1rem;margin-left: 2rem;float: left;">
                        <img src="@item.Headimgurl" style="height: 100%;border-radius: 50%;">
                    </div>
                    <div style="width: 70%;height: 4rem;margin-top: 1rem;margin-left: 1rem;float: right;">
                        <div style="width: 100%;height: 50%;">
                            <div style="width: 50%;float: left;font-size: 1rem;margin-top: 0.3rem;"><span>@item.UserName</span></div>
                            <div style="width: 50%;float: right;font-size: 1.2rem;text-align: center;"><span>@item.AwardName</span></div>
                        </div>
                        <div style="width: 100%;height: 50%;">
                            <div style="width: 50%;float: left;font-size: 0.7rem;margin-top: 0.3rem;"><span>@string.Format("{0:MM-dd HH:mm}", item.LastUpdated.Value)</span></div>
                            <div style="width: 50%;float: right;font-size: 1.2rem;text-align: center;"><span>(@item.AwardProduct)</span></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <script>
