            <span class="fa fa-angle-down"></span>
        </div>
    </div>
    <div class="titlemenudiv" style="width: 100%;height: 5.5rem;position: fixed;z-index: 2;border-bottom: solid 1px #d1d1d1;display: none;">
        <div style="width: 100%;height: 100%;background-color: #eeeeee;position: absolute;z-index: -1;opacity: 0.9"></div>
        @{
            var flow = Model.Activity.ActivityFlows.FirstOrDefault(p => p.FlowType == Sensing.Entities.Weixin.FlowType.Introduction);
        }
