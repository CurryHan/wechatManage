                </div>
                <div style="width: 100%;height: 1rem;color: #8d8d8d">聊天室</div>
            </a>
        </div>
        @if (flow != null)
        {
            <div style="width: 3rem;height: 4rem;margin-top: 0.5rem;text-align: center;margin-left: 1rem;float: left;">
                <a onclick="location.href='@Url.Action("Transfer","Activity",new { activityId=Model.ActivityID,flowType=(int)Sensing.Entities.Weixin.FlowType.Introduction, openid=ViewBag.openid})';return false;">
