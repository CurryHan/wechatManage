@model SensingCloud.Models.WeixinUserAwardModel
@{
    ViewBag.Title = "中奖列表";
    List<SensingCloud.Models.WeixinUserAwardListModel> sortList = Model.UserAwardList;
    string timejson = Newtonsoft.Json.JsonConvert.SerializeObject(sortList, Newtonsoft.Json.Formatting.Indented,
        new Newtonsoft.Json.JsonSerializerSettings
        {
            ReferenceLoopHandling = Newtonsoft.Json.ReferenceLoopHandling.Ignore
        });
    sortList.Sort(delegate (SensingCloud.Models.WeixinUserAwardListModel x, SensingCloud.Models.WeixinUserAwardListModel y)
    {
        return y.Rank.CompareTo(x.Rank);
    });

    string rankjson = Newtonsoft.Json.JsonConvert.SerializeObject(sortList, Newtonsoft.Json.Formatting.Indented,
        new Newtonsoft.Json.JsonSerializerSettings
        {
            ReferenceLoopHandling = Newtonsoft.Json.ReferenceLoopHandling.Ignore
        });
}
@functions{
    public string GetLogo()
    {
        if (!string.IsNullOrEmpty(Model.ActivityLogoPath))
        {
            return Model.ActivityLogoPath;
        }
        else {
            return "/Content/weixinImage/photoshare/logo.png";
        }
    }
}


