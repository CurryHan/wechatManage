
@{
    ViewBag.Title = "游戏中心";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Game Center</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Link Swiper's CSS -->
    <link href="~/content/game/css/animate.min.css" rel="stylesheet" />
    <link href="~/content/game/css/swiper.min.css" rel="stylesheet" />

    <script src="~/scripts/jquery-2.1.4.js"></script>
    <script src="~/scripts/swiper.min.js"></script>
    <script src="~/scripts/swiper.animate1.0.2.min.js"></script>
    <!-- styles -->
    <style>

        .navbar .navbar-nav>li>a{
            font-size:18px;
        }
        .navbar .navbar-brand{
            height:0;
        }
        html, body {
            position: relative;
            height: 100%;
            /*overflow-y: hidden;*/
            /*overflow-x:hidden;*/
        }

        body {
            background: #000000;
            font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
            color: #000;
            margin: 0;
            padding: 0;
        }

        .swiper-container {
            width: 100%;
            height: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        .swiper-slide {
            text-align: center;
            background: #fff;
            /* Center slide text vertically */
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            justify-content: center;
            -webkit-box-align: center;
            -ms-flex-align: center;
            align-items: center;
        }

        .swiper-wrapper p {
            color: white;
        }

        .swiper-container-v {
            background: #eee;
        }

        .titlesswiper {
            width: 100%;
            position: absolute;
            left: 50%;
            top: 50%;
            -webkit-transform: translate(-50%,-50%);
            -moz-transform: translate(-50%,-50%);
            -ms-transform: translate(-50%,-50%);
            bottom:0;
        }

        .contentdiv {
            width: 53%;
            height: 100%;
            text-align: center;
            position: relative;
        }

        .titlefont {
            font-size: 3.5vmax;
        }

        .introducefont {
            font-size: 2vmax;
        }

        
    </style>
    @{Html.RenderPartial("_Styles");}
    <!--[if IE]
    <script type="text/javascript">
    alert("ie")
    </script>
    <![endif]-->



</head>
<body>
    <div class="container">
        @Html.Partial("_Menu")
    </div>
        <!-- Swiper -->

        <div class="swiper-container" style="margin-top:50px">
            <div class="swiper-wrapper">
                <div class="swiper-slide" style="background-image: url('/content/game/img/p1.jpg');background-repeat: no-repeat;background-size: cover;background-position: center;">
                    <div class="contentdiv">
                        <div class="titlesswiper">
                            <img style="width: 55.2%;" class="ani" swiper-animate-effect="bouncein" swiper-animate-duration="0.6s" swiper-animate-delay="0.3s" src="/content/game/img/elements/hd01.png">
                        </div>
                    </div>
                </div>
                <div class="swiper-slide" style="background-image: url('/content/game/img/p1_2.jpg');background-repeat: no-repeat;background-size: cover;background-position: center;">
                    <div class="contentdiv">
                        <div class="titlesswiper">
                            <img style="width:98%;" class="ani" swiper-animate-effect="bouncein" swiper-animate-duration="0.6s" swiper-animate-delay="0.3s" src="/content/game/img/elements/title_2.png">
                        </div>
                    </div>
                </div>
                <div class="swiper-slide" style="background-image: url('/content/game/img/p1_3.jpg');background-repeat: no-repeat;background-size: cover;background-position: center;">
                    <div class="contentdiv">
                        <div class="titlesswiper">
                            <img style="width: 98%;" class="ani" swiper-animate-effect="bouncein" swiper-animate-duration="0.6s" swiper-animate-delay="0.3s" src="/content/game/img/elements/title_3.png">
                        </div>
                    </div>
                </div>
                <div class="swiper-slide" style="background-image: url('/content/game/img/p1_4.jpg');background-repeat: no-repeat;background-size: cover;background-position: center;">
                    <div class="contentdiv">
                        <div class="titlesswiper">
                            <img style="width: 98%;" class="ani" swiper-animate-effect="bouncein" swiper-animate-duration="0.6s" swiper-animate-delay="0.3s" src="/content/game/img/elements/title_4.png">
                        </div>
                    </div>
                </div>
            </div>
            <!-- Add Pagination -->
            <div class="swiper-pagination"></div>
        </div>
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="col-md-6">
                    <h3>全部游戏</h3>
                </div>
                <div class="col-md-6">
                    <div style="text-align:right;margin-top:20px;">
                        <div class="nav-search" id="nav-search" style="position:relative;">
                            <div class="form-search">
                                <span class="input-icon">
                                    <input placeholder="请输入游戏名称" class="nav-search-input" id="nav-search-input" autocomplete="off" type="text">
                                    <i class="ace-icon fa fa-search nav-search-icon"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="padding-left:10%;padding-right:10%;">
                <div class="col-xs-12">
                    <div id="DataList_ContentDIV">

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 space-24"></div>
        <div class="col-md-12">
            <div class="row">
                <div style="height: 200px;position: relative;background-color: #1f2227; ">
                    <div style="width: 50%; position: absolute;top: 10%;left: 10%;-webkit-transform:translate(0%,0%);-moz-transform:translate(0%,0%); -ms-transform:translate(0%,0%);">
                        <div style="width: 100%;">
                            <img style="width: 45%" src="/content/game/img/elements/foot.png">
                        </div>
                        <div style="width: 100%;padding-left: 3%;color: #fff;margin-top: 5%;">
                            <span style="font-size: 1vw">联系电话</span> <span style="font-size:1.5vw">0510-85381098&nbsp; &nbsp;18616300540</span>
                        </div>

                    </div>
                    <div style="width: 50%; position: absolute;right:10%; top: 20%;-webkit-transform:translate(0%,0%);-moz-transform:translate(0%,0%);-ms-transform:translate(0%,0%);text-align: right;">
                        <div style="width: 100%;right: 10%;">
                            <div style="width: 14%;float: right;">
                                <img style="width: 100%" src="/content/game/img/elements/wxcode.png">
                            </div>
                            <div style="width: 30%;float: right;margin-top: 8%;margin-right: 2%">
                                <img style="width: 20%;margin-left: 5%;" src="/content/game/img/elements/WC.png">
                                <img style="width: 20%;margin-left: 5%;" src="/content/game/img/elements/WB.png">
                                <img style="width: 20%;margin-left: 5%;" src="/content/game/img/elements/QQ.png">
                            </div>
                        </div>

                    </div>
                </div>
                <div style=" width 100%;position relative;background-color #000;margin auto;padding-top 5px;padding-bottom 5px;color #fff;bottom:0;height:35px; ">
                    <span style="float:left;font-size: 1vw;margin-left: 10%;">©Copyright 2015 感知互动  Al Rights Resever. </span>
                    <span style="float:right;font-size: 1vw;margin-right: 10%;">苏ICP备13045243号 </span>
                </div>
            </div>
        </div>

        <!-- Initialize Swiper -->
        <script>
            $(function () {
                var swiper = new Swiper('.swiper-container', {
                    pagination: '.swiper-pagination',
                    paginationClickable: true,
                    direction: 'horizontal',
                    speed: 1000,
                    autoplay: 4000,
                    loop: true,
                    spaceBetween: 0,
                });
                var sw = $(".swiper-container");
                var sh = (sw.width() * 640) / 1720 + "px";
                $(".swiper-container").css("height", sh);

                var Url = "/Home/GameCenter";
                (function () {
                    var options = {
                        method: 'get',
                        data: { query: $("#nav-search-input").val() }
                    };
                    $.ajax(Url, options).success(function (data) {
                        $('#DataList_ContentDIV').html(data);
                    });
                })();

                $("#nav-search-input").change(function () {
                    var options = {
                        method: 'get',
                        data: { qstr: $(this).val() }
                    };
                    $.ajax(Url, options).success(function (data) {
                        $('#DataList_ContentDIV').html(data);
                    });
                });
                $(window).resize(function () {
                    var sw = $(".swiper-container");
                    var sh = (sw.width() * 640) / 1720 + "px";
                    $(".swiper-container").css("height", sh);
                });
            });
        </script>
</body>
</html>